<p id="notice"><%= notice %></p>

<h1>Categories</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Product segment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.title %></td>
        <td><%= category.product_segment_id %></td>
        <td><%= link_to 'Show', control_panel_category_path(category) %></td>
        <td><%= link_to 'Edit', edit_control_panel_category_path(category) %></td>
        <td><%= link_to 'Destroy', control_panel_category_path(category), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Category', new_control_panel_category_path %>

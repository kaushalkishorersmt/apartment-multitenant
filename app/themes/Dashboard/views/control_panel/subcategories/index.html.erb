<p id="notice"><%= notice %></p>

<h1>Subcategories</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @subcategories.each do |subcategory| %>
      <tr>
        <td><%= subcategory.title %></td>
        <td><%= subcategory.category_id %></td>
        <td><%= link_to 'Show', control_panel_subcategory_path(subcategory) %></td>
        <td><%= link_to 'Edit', edit_control_panel_subcategory_path(subcategory) %></td>
        <td><%= link_to 'Destroy', control_panel_subcategory_path(subcategory), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Subcategory', new_control_panel_subcategory_path %>

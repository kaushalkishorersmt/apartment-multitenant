<p id="notice"><%= notice %></p>

<h1>Product Properties</h1>

<table>
  <thead>
    <tr>
      <th>Product</th>
      <th>Size</th>
      <th>Color</th>
      <th>Quantity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product_properties.each do |product_property| %>
      <tr>
        <td><%= product_property.product %></td>
        <td><%= product_property.size %></td>
        <td><%= product_property.color %></td>
        <td><%= product_property.quantity %></td>
        <td><%= link_to 'Show', control_panel_product_property(product_property) %></td>
        <td><%= link_to 'Edit', edit_control_panel_product_property_path(product_property) %></td>
        <td><%= link_to 'Destroy', control_panel_product_property_path(product_property), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<p id="notice"><%= notice %></p>

<h1>Product Segments</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product_segments.each do |product_segment| %>
      <tr>
        <td><%= product_segment.title %></td>
        <td><%= link_to 'Show', control_panel_product_segment_path(product_segment) %></td>
        <td><%= link_to 'Edit', edit_control_panel_product_segment_path(product_segment) %></td>
        <td><%= link_to 'Destroy', control_panel_product_segment_path(product_segment), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product Segment', new_control_panel_product_segment_path %>

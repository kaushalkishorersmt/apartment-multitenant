<div id="all">
  <div id="content">
    <div class="container">
      <div class="col-md-12">
        <ul class="breadcrumb">
          <li>
            <%= link_to "Home", root_path %>
          </li>
          <li>Shopping cart</li>
        </ul>
        <div class="box text-center">
          <div class="row">
            <div class="col-sm-10 col-sm-offset-1">
              <h1>Shopping cart</h1>
              <% if current_cart.empty? %>
                <p class="text-muted">
                  <%= t('cart.isempty') %>
                </p>
                <%= link_to t('back.home'), root_path, class: "btn btn-default" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-9 clearfix">
        <div class="box">
          <div class="row">
            <div class="col-md-12">
              <p>Name:
                <%= current_customer.full_name %>
              </p>
              <p>Email:
                <%= current_customer.email %>
              </p>
              <hr/>
            </div>
            <div class="col-md-6">
              <strong>Billing Address:</strong>
              <p>
                <%= @billing_address.line1 %>
              </p>
              <p>
                <%= @billing_address.line2 %>
              </p>
              <p>
                <%= @billing_address.zipcode %>
              </p>
              <p>
                <%= @billing_address.city %>
              </p>
              <p>
                <%= @billing_address.state %>
              </p>
              <p>
                <%= @billing_address.country %>
              </p>
            </div>
            <div class="col-md-6">
              <strong>Shipping Address:</strong>
              <p>
                <%= @shipping_address.line1 %>
              </p>
              <p>
                <%= @shipping_address.line2 %>
              </p>
              <p>
                <%= @shipping_address.zipcode %>
              </p>
              <p>
                <%= @shipping_address.city %>
              </p>
              <p>
                <%= @shipping_address.state %>
              </p>
              <p>
                <%= @shipping_address.country %>
              </p>
            </div>
            <div class="col-md-12">
              <hr/>
              <h4>Order of
                <%= number_to_currency(current_cart.total, unit: "₹ ") %> for
                <%= current_cart.items.map(&:title).join(",") %>.</h4>
              <p>Items will be dispatched within 24 to 48 hrs. We would keep you posted with delivery mode and airwayable number.</p>
            </div>
          </div>
          <div class="box-footer">
            <div class="pull-left">
              <%= link_to cart_path, class: 'btn btn-default' do %>
                Back to Cart
              <% end %>
            </div>
            <div class="pull-right">
              <%= render partial: 'checkout_button', locals: { price: current_cart.total, description: current_cart.items.collect(&:title).join(", ") } %>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-3">
        <div class="box" id="order-summary">
          <div class="box-header">
            <h3>Order summary</h3>
          </div>
          <p class="text-muted">Shipping and additional costs are calculated based on the values you have entered.</p>
          <div class="table-responsive">
            <table class="table">
              <tbody>
                <tr>
                  <td>Order subtotal</td>
                  <th>
                    <%= number_to_currency(current_cart.total, unit: "₹ ") %>
                  </th>
                </tr>
                <tr>
                  <td>Shipping and handling</td>
                  <th>0.00</th>
                </tr>
                <tr>
                  <td>Tax</td>
                  <th>0.00</th>
                </tr>
                <tr class="total">
                  <td>Total</td>
                  <th>
                    <%= number_to_currency(current_cart.total) %>
                  </th>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
      <!-- /.col-md-3 -->
    </div>
    <!-- /.container -->
  </div>
  <!-- /#content -->
</div>

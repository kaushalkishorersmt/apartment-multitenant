<p id="notice"><%= notice %></p>

<h1>Shipping Addresses</h1>

<table>
  <thead>
    <tr>
      <th>Line1</th>
      <th>Line2</th>
      <th>Zipcode</th>
      <th>City</th>
      <th>State</th>
      <th>Country</th>
      <th>Customer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shipping_addresses.each do |shipping_address| %>
      <tr>
        <td><%= shipping_address.line1 %></td>
        <td><%= shipping_address.line2 %></td>
        <td><%= shipping_address.zipcode %></td>
        <td><%= shipping_address.city %></td>
        <td><%= shipping_address.state %></td>
        <td><%= shipping_address.country %></td>
        <td><%= shipping_address.customer %></td>
        <td><%= link_to 'Show', shipping_address %></td>
        <td><%= link_to 'Edit', edit_shipping_address_path(shipping_address) %></td>
        <td><%= link_to 'Destroy', shipping_address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

